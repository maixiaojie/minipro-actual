/**index.wxss**/
page {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.bg {
  width: 100%;
  height: 100%;
}
.content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  z-index: 1;
  color: white;
}

.city {
  font-size: 50rpx;
  margin-top: 100rpx;
}
.tmp {
  font-size:100rpx;
}
.wind_dir {
  font-size: 30rpx;
}
.info_container {
  flex: 1;
  background:rgba(23,23,23, .6);
  margin:50rpx;
  padding:30rpx;
}

.row {
  display: flex;
  flex-direction: row;
  margin-bottom:20rpx;
  border-bottom:1rpx solid rgba(255, 255, 255, 0.4);
  padding-bottom:10rpx;

}
.card {
  flex: 1;
}
.name {
  font-size: 28rpx;
}
.value {
  font-size: 40rpx;
}